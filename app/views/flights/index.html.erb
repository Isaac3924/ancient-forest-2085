<h1>Flights Index</h1>
<ul id="flight_list">
  <% @flights.each do |flight| %>
    <li>
      <p>Flight Number: <%= flight.number %> | Airline: <%= flight.airline.name %></p>
      <div id="flight-<%=flight.id%>">
        <p>Passengers:</p>
        <% flight.passengers.each do |passenger| %>
          <p><%= passenger.name %> <%= link_to "Remove", "/flights/#{flight.id}/flight_passengers/#{passenger.id}", method: :delete %></p>
        <% end %>
      </div>
    </li>
  <% end %>
</ul>